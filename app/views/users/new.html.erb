

<section id="forms">
  <div class="page-header">
  </div>

  <div class="row">
    <div class="span10 offset1">
      <%= form_for @user, html: { class: 'form-horizontal well' } do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <fieldset>
          <legend>
            Sign Up Information</legend>
            <div class="control-group">
            <%= f.text_field :email, class: "input-x large", placeholder: 'Email' %><br/>
            </div>

            <div class="control-group">
            <%= f.password_field :password, class: "input-x large", placeholder: 'Password' %><br/>
            </div>

            <div class="control-group">
            <%= f.password_field :password_confirmation, class: "input-x large", placeholder: 'Password_confirmation' %><br/>
            </div>

            <%= f.submit 'Join', class: "btn btn-primary" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</section>