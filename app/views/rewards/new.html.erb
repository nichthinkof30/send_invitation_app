<section id="forms">
  <h1>Create Reward</h1>

  <%= form_for @reward do |f| %>
    <% if @reward.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @reward.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p class="btn"><%= f.submit %></p>
  <% end %>
</section>