<!DOCTYPE html>
<html>
<head>
  <title>FunCoolVenture</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

 <div class="navbar navbar-fixed-top">
   <div class="navbar-inner">
     <div class="container">

       <a class="brand" href="../">Fun and Cool Venture</a>
       <div class="nav-collapse collapse" id="main-menu">
        <ul class="nav" id="main-menu-left">
          <% if current_user %>
          <li><%= link_to  "Log out from #{current_user.email}", log_out_path, html: { id: 'swatch-link'} %></li>
          <% else %>
          <li><%= link_to "Sign up", sign_up_path, html: { id: 'swatch-link'} %></li>
          <li><%= link_to "log in", log_in_path, html: { id: 'swatch-link'} %></li>
          <% end %>
        </ul>

        <ul class="nav pull-right" id="main-menu-right">
          <% flash.each do |name, msg| %>
            <div class="alert alert-info">
            <a class="close">&times;</a>
            <strong><%= content_tag :div, msg, :id => "flash_#{name}" %></strong>
            </div>
          <% end %>
        </ul>


       </div>
     </div>
   </div>
 </div>


<div class="container">


  <%= yield %>
</div>



</body>
</html>
